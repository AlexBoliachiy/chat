<Window x:Class="GuiClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyMessanger" Height="209.098" Width="314.286">
    <StackPanel Margin="10">
        <Label Content="_Login:" Target="{Binding ElementName=txtLogin}" />
        <TextBox Name="txtLogin" />
        <Label Content="_Password:" Target="{Binding ElementName=txtPassword}" />
        <PasswordBox Name="txtPassword" />
        <Button x:Name="loginButton" Content="Sign in" Margin="10" Click ="login_Click"  />
        <Button x:Name="regButton" Content="Sign up"  Width="50" Click ="reg_Click"/>

    </StackPanel>
</Window>
